{
  "name": "portainer-tailscale-deploy-action",
  "version": "1.0.0",
  "description": "GitHub Action to deploy stacks to a private Portainer instance via Tailscale",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && npm run package",
    "package": "ncc build lib/main.js -o dist/main && ncc build lib/post.js -o dist/post",
    "test": "jest --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "all": "npm run build && npm test"
  },
  "keywords": [
    "github-action",
    "portainer",
    "tailscale",
    "deploy",
    "docker-compose",
    "self-hosted"
  ],
  "author": "Sankalp Narula",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/http-client": "^2.2.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
